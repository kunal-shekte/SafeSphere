<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.safesphere">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- ðŸ†• ADD THIS - Android 13+ notification permission -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:label="SafeSphere"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeSphere">

        <!-- ðŸ”¹ MAIN LAUNCHER = LOGIN ACTIVITY -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ AFTER LOGIN â†’ DASHBOARD -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- ðŸ”¹ REGISTER SCREEN -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- ðŸ”¹ PROFILE SCREEN -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- ðŸ”¹ FAKE CALL -->
        <activity
            android:name=".FakeCallActivity"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.SafeSphere.FakeCall"
            android:exported="false" />

        <!-- ðŸ”¹ BACKGROUND SERVICE -->
        <service
            android:name=".SafeSphereService"
            android:exported="false"
            android:foregroundServiceType="location|microphone" />

    </application>

</manifest>