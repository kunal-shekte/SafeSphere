<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SafeSphere"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/blueDark"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/btnProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_myplaces"
        android:tint="@color/blueDark"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SOS CURRENT LOCATION -->
    <Button
        android:id="@+id/btnSosCurrent"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="SOS • Current Location"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/bluePrimary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SOS LIVE LOCATION -->
    <Button
        android:id="@+id/btnSosLive"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:text="SOS • Live Location"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blueDark"
        app:layout_constraintTop_toBottomOf="@id/btnSosCurrent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSiren"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="Siren"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/bluePrimary"
        app:layout_constraintTop_toBottomOf="@id/btnSosLive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnFakeCall"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="Fake Call"
        android:textAllCaps="false"
        android:backgroundTint="#1565C0"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnSiren"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="App works in background. Say your keyword or shake phone 5 times to trigger SOS."
        android:textSize="14sp"
        android:textColor="@color/blueDark"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
